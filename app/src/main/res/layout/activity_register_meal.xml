<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_gravity="end|bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:clickable="true"
        android:backgroundTint="@color/colorlightgreen"
        app:fabSize="normal"
        android:src="@drawable/upload"/>

    <com.google.android.material.appbar.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/registerMeal_toolbar"
            android:background="@color/colorblue"
            android:theme="@style/Theme.AppCompat"
            app:titleTextColor="@android:color/white"
            app:title="ADD_MENU"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            tools:context=".AddMenuActivity">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:orientation="horizontal"
                    android:background="@drawable/round_border"
                    android:gravity="center_vertical">
                    <TextView
                        android:padding="8dp"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:text="KOREAN"
                        android:textColor="@color/colorblue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/registerMeal_txt_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:text="2020년 11월 11일"
                        android:textColor="@color/colorblue"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <EditText
                    android:id="@+id/registerMeal_edt_m1"
                    android:layout_marginStart="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:hint="menu1"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <EditText
                    android:id="@+id/registerMeal_edt_m2"
                    android:layout_marginStart="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:hint="menu2"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <EditText
                    android:id="@+id/registerMeal_edt_m3"
                    android:layout_marginStart="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:hint="menu3"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>

                <EditText
                    android:id="@+id/registerMeal_edt_m4"
                    android:layout_marginStart="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:hint="menu4"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>

                <EditText
                    android:id="@+id/registerMeal_edt_m5"
                    android:layout_marginStart="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:hint="menu5"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>

                <EditText
                    android:id="@+id/registerMeal_edt_m6"
                    android:layout_marginStart="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:hint="menu6"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:padding="8dp"
                    android:layout_margin="7dp"
                    android:background="@drawable/round_border"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="INTERNATIONAL"
                    android:textColor="@color/colorblue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/registerMeal_edt_mInt1"
                    android:layout_marginStart="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:hint="menu1"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <EditText
                    android:id="@+id/registerMeal_edt_mInt2"
                    android:layout_marginStart="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:hint="menu2"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <EditText
                    android:id="@+id/registerMeal_edt_mInt3"
                    android:layout_marginStart="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:hint="menu3"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <EditText
                    android:id="@+id/registerMeal_edt_mInt4"
                    android:layout_marginStart="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:hint="menu4"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <EditText
                    android:id="@+id/registerMeal_edt_mInt5"
                    android:layout_marginStart="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:hint="menu5"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <EditText
                    android:id="@+id/registerMeal_edt_mInt6"
                    android:layout_marginStart="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:hint="menu6"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:padding="8dp"
                    android:layout_margin="7dp"
                    android:background="@drawable/round_border"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="NOODLE"
                    android:textColor="@color/colorblue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/registerMeal_edt_mNd1"
                    android:layout_marginStart="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:hint="menu1"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <EditText
                    android:id="@+id/registerMeal_edt_mNd2"
                    android:layout_marginStart="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:hint="menu2"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <EditText
                    android:id="@+id/registerMeal_edt_mNd3"
                    android:layout_marginStart="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:hint="menu3"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <EditText
                    android:id="@+id/registerMeal_edt_mNd4"
                    android:layout_marginStart="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:hint="menu4"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <EditText
                    android:id="@+id/registerMeal_edt_mNd5"
                    android:layout_marginStart="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:hint="menu5"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>

                <EditText
                    android:id="@+id/registerMeal_edt_mNd6"
                    android:layout_marginStart="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:hint="menu6"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



</androidx.coordinatorlayout.widget.CoordinatorLayout>